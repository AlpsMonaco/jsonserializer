{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "(Windows) build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/MDd",
                "/std:c++20",
                "/I${workspaceFolder}\\include",
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\bin"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}